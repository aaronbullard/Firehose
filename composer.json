{
    "name": "aaronbullard/firehose",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Aaron Bullard",
            "email": "aaron.bullard77@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.3"
    },
    "autoload": {
        "psr-4": {
            "Firehose\\": "src"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests"
        ],
        "files": ["tests/helpers.php"]
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --colors=always --coverage-html=./coverage --coverage-text=tests/summary.txt"
    }
}
